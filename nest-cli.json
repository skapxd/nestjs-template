{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "server/main",
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": true,
    "tsConfigPath": "tsconfig.server.json",
    "plugins": [
      "@nestjs/swagger"
    ],
    "assets": [
      "**/*.*"
    ],
    "watchAssets": true
  }
}